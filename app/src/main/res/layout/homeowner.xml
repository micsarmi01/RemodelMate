<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadowy"
    android:id="@+id/homeOwner_layout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:contentDescription="logo"
        android:id="@+id/logosmall" />


    <TextView
        android:id="@+id/Welcome_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:text="What: you can get as specific as you want"
        android:id="@+id/textView_what"
        android:layout_marginTop="75dp" />

    <EditText
        android:id="@+id/what_field"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:hint="ex. Vinyl Windows, Aluminum Siding... "
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:lines="1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/email2"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Where: "
        android:id="@+id/textView_where" />

    <EditText
        android:id="@+id/where_field"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:hint="ex. San Francisco, California, 93940"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/email2"
        android:lines="1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/search_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/getprice"

        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/advSearch_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:textColor="@color/white"
        android:text="advanced search"
         />

</LinearLayout>